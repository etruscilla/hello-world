	<script>
		var screenHeight = document.documentElement.clientWidth;
		$(function(){
			$(window).scroll(function() {
				if($(this).scrollTop() >= screenHeight) {
				$('header').addClass('down');
			}
			else{
				$('header').removeClass('down');
			}
			});

		});
		
		
	</script>
